# .env.example
APP_NAME=Lokalaku
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lokalaku_production
DB_USERNAME=root
DB_PASSWORD=

# Kolosal AI[](https://kolosal.ai)
KOLOSAL_API_KEY=
KOLOSAL_BASE_URL=https://api.kolosal.ai/v1

# OpenWeatherMap
WEATHER_API_KEY=

# Sanctum & CORS (sesuaikan dengan domain frontend kamu)
SANCTUM_STATEFUL_DOMAINS=localhost:3000,lokalaku.com,app.lokalaku.com
SESSION_DOMAIN=.lokalaku.com

QUEUE_CONNECTION=sync
# QUEUE_CONNECTION=database  # ubah jadi sync kalau tidak pakai worker

CACHE_DRIVER=redis
SESSION_DRIVER=file
# SESSION_DRIVER=database   # bisa diganti file kalau tidak butuh session persisten

# Storage (pastikan volume ter-mount di production)
FILESYSTEM_DISK=public
